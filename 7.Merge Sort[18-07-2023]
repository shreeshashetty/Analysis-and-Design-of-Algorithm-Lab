#include<stdio.h>

void mergeArray(int low,int mid,int high,int arr[]){
	int i=low,j=mid+1,k=low;
	int temp[20];
	while(i<=mid && j<=high){
		if(arr[i]<arr[j]){
			temp[k++] = arr[i++];
		}else{
			temp[k++] = arr[j++];
		}
	}
	while(i<=mid){
		temp[k++] = arr[i++];
	}
	while(j<=high){
		temp[k++] = arr[j++];
	}
	int l;
	for( l = low ; l<= high; l++){
		arr[l] = temp[l];
	}
}

void mergeDivide(int low,int high,int arr[]){
	if(low>=high) return;
		int mid = (low+high)/2;
		mergeDivide(low,mid,arr);
		mergeDivide(mid+1,high,arr);
		mergeArray(low,mid,high,arr);
}


int main(){
	int n;
	printf("Enter the no.of elements\n");
	scanf("%d",&n);
	int arr[n];
	printf("Enter the elements\n");
	int i;
	for(i=0;i<n;i++){
		scanf("%d",&arr[i]);
	}
	mergeDivide(0,n-1,arr);
	printf("The sorted array is : \n");
	 i=0;
	for( i=0;i<n;i++){
		printf("%d ",arr[i]);
	}
	printf("\n");
}
